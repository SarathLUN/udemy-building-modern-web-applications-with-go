{{ template "base" . }}
{{ define "content" }}
<div class="container">
    <div class="row">
        <div class="col">
            <h1>This is the about page</h1>
            <p>This is a paragraph of text.</p>
            <p>This came from the template data: {{ index .StringMap "test" }}</p>
            <p>
                {{if ne (index .StringMap "remote_ip") ""}}
                    Your IP address is: {{index .StringMap "remote_ip"}}.
                {{else}}
                    I don't get your IP address yet. Visit <a href="/">Home</a> page so that I can set it.
                {{end}}
            </p>
        </div>
    </div>
</div>
{{ end }}
